<?xml version="1.0"?>
<launch>
    <param name="robot_description" textfile="$(find explorer_bot)/urdf/explorer_bot.urdf"/>
    
    <include file="$(find gazebo_ros)/launch/empty_world.launch"/>

    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model explorer "/>

    <node name="Rviz" pkg="rviz" type="rviz" output="screen" args="-d /home/joseph/slam_ws/src/explorer_bot/config/simple.rviz"/>

    <node name="RSP" pkg="robot_state_publisher" type="robot_state_publisher" output="screen">
        <param name="use_sim_time" value="true"/> 
        <param name="publish_frequency" value="50.0"/> 
        <param name="wheel_radius" value="0.035"/> 
        <param name="wheel_separation" value="0.25"/> 
        <param name="left_wheel_joint" value="left_wheel_joint"/> 
        <param name="right_wheel_joint" value="right_wheel_joint"/> 
    </node>

    <node pkg="gmapping" type="slam_gmapping" name="maping_node">
        <param name="base_frame" value="base_link" />
        <param name="odom_frame" value="odom" />
        <param name="delta" value="0.1" />
    </node>

    <node pkg="move_base" type="move_base" name="navigation" output="screen">
        <param name="controller_frequency" value="10.0" />
        <rosparam file="$(find explorer_bot)/config/costmap_common_params.yaml" command="load" ns="global_costmap"/>
        <rosparam file="$(find explorer_bot)/config/costmap_common_params.yaml" command="load" ns="local_costmap"/>

        <rosparam file="$(find explorer_bot)/config/local_costmap_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find explorer_bot)/config/global_costmap_params.yaml" command="load" ns="global_costmap" />

        <param name="base_global_planner" value="navfn/NavfnROS"/>
        <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>
        <rosparam file="$(find explorer_bot)/config/trajectory_planner.yaml" command="load" ns="TrajectoryPlannerROS" />
      </node>
</launch>